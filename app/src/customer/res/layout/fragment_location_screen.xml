<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context="com.example.shoppingapp_customer.fragments.LocationScreen">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingStart="@dimen/average_margin_padding"
        android:paddingHorizontal="@dimen/average_margin_padding"
        android:src="@drawable/back_img"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/actionbar_txt"
        app:layout_constraintBottom_toBottomOf="@id/actionbar_txt"
        android:id="@+id/img_back_cksf"/>

    <TextView
        android:layout_width="0dp"
        android:paddingStart="@dimen/average_margin_padding"
        android:layout_height="?actionBarSize"
        app:layout_constraintStart_toEndOf="@id/img_back_cksf"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:id="@+id/actionbar_txt"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/checkout"
        style="@style/header_Text"
        android:gravity="center_vertical"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_address_cksf"
        android:layout_width="match_parent"
        android:layout_marginVertical="@dimen/average_margin_padding"
        android:layout_marginHorizontal="@dimen/high_margin_padding"
        app:layout_constraintTop_toBottomOf="@id/actionbar_txt"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingVertical="@dimen/average_margin_padding"
            android:paddingHorizontal="@dimen/average_margin_padding"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Deliever to"
                android:id="@+id/txt_home_cksf"
                style="@style/header_Text"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/btn_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/txt_address"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/home"
                style="@style/Text"
                android:textSize="@dimen/_12ssp"
                android:id="@+id/txt_address"
                android:textColor="@color/btn_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/txt_skip_cksf"

                />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txt_skip_cksf"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="skip"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/half_round_corner"
                android:paddingVertical="@dimen/low_margin_padding"
                android:paddingHorizontal="@dimen/high_margin_padding"
                android:shape="ring"

                app:layout_constraintCircleRadius="150dp"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/proceed"
        android:textSize="@dimen/normal_text_size"
        android:id="@+id/proceed_txt"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/btn_color"
        />

    <com.here.sdk.mapviewlite.MapViewLite
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/average_margin_padding"
        android:layout_marginBottom="@dimen/average_margin_padding"
        android:layout_marginHorizontal="@dimen/average_margin_padding"
        android:padding="@dimen/low_margin_padding"
        android:background="@color/white"
        android:id="@+id/map"
        app:layout_constraintBottom_toTopOf="@id/proceed_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_address_cksf"
       />

    <ImageView
        android:layout_width="@dimen/average_icon_width_height"
        android:layout_height="@dimen/average_icon_width_height"
        android:src="@drawable/get_location_img"
        app:tint="@color/app_icon_color"
        android:id="@+id/get_location_img"
        app:layout_constraintBottom_toBottomOf="@id/map"
        app:layout_constraintEnd_toEndOf="@id/map"
        android:layout_margin="@dimen/high_margin_padding"
        />
</androidx.constraintlayout.widget.ConstraintLayout>