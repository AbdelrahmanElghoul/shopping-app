<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_category_ccl"
    android:layout_margin="@dimen/low_margin_padding"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="@dimen/low_margin_padding"
        android:layout_height="match_parent">

        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="@dimen/default_elevation"
            android:padding="@dimen/_5sdp"
            android:layout_margin="@dimen/_1sdp"
            android:id="@+id/img_category_ccl"
            android:scaleType="fitCenter"
            android:layout_width="0dp"

            android:layout_height="@dimen/default_icon_width_height"
            android:src="@drawable/default_img"
            android:contentDescription="@string/category" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_category_ccl"
            android:text="name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_category_ccl"
            android:transitionName="@string/CATEGORY_NAME_TRANSITION_TAG"
            android:textColor="#000"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>