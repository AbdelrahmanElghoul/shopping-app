<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context="com.example.shoppingapp_customer.fragments.CartScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/average_margin_padding"
        android:layout_marginVertical="@dimen/low_margin_padding">

        <ImageView
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:paddingHorizontal="@dimen/high_margin_padding"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/back_img"
            android:id="@+id/back_img"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/your_cart"
            app:layout_constraintEnd_toStartOf="@id/cart_img"
            android:gravity="center_vertical"
            android:layout_weight="1"
            style="@style/header_Text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/back_img"

            />

        <ImageView
            android:layout_width="@dimen/large_icon_width_height"
            android:layout_height="@dimen/large_icon_width_height"
            android:scaleType="fitCenter"
            android:paddingVertical="@dimen/low_margin_padding"
            android:id="@+id/cart_img"
            android:layout_marginEnd="@dimen/average_margin_padding"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/shopping_cart_img"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/small_icon_width_height"
            app:layout_constraintTop_toTopOf="@id/cart_img"
            app:layout_constraintEnd_toEndOf="@id/cart_img"
            android:background="@drawable/full_round_corner"
            android:textColor="@color/white"
            android:text="0"
            android:id="@+id/cart_item_count_txt"
            android:paddingHorizontal="@dimen/low_margin_padding"
            android:backgroundTint="@color/black"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:shape="oval"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/average_margin_padding"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="@dimen/high_margin_padding"
            android:layout_marginVertical="@dimen/average_margin_padding"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_item"
                android:id="@+id/txt_total_item"
                style="@style/Text"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="@dimen/normal_text_size"
                android:id="@+id/item_count_txt"
                app:layout_constraintTop_toBottomOf="@id/txt_total_item"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_price"
                style="@style/Text"
                android:id="@+id/txt_total_Price"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 500"
                android:textSize="@dimen/normal_text_size"
                android:id="@+id/item_price_txt"
                app:layout_constraintTop_toBottomOf="@id/txt_total_Price"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/txt_total_Price"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginVertical="@dimen/average_margin_padding"
    android:padding="@dimen/average_margin_padding"
    android:layout_weight="1">

        <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">



            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:nestedScrollingEnabled="false"
                android:layout_height="wrap_content"
                android:id="@+id/cart_recycler_view"
                />
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/remove_all"
            android:textSize="@dimen/text_size"
            android:id="@+id/remove_all_txt"
            style="@style/round_corner_button"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/continue_shopping"
            android:textSize="@dimen/text_size"
            android:id="@+id/continue_shopping_txt"
            style="@style/round_corner_button"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:text="@string/proceed_to_checkout"
        android:textSize="@dimen/header_text_size"
        android:background="@color/green_60"
        android:gravity="center"
        android:textColor="@color/white"
        android:id="@+id/cart_proceed_checkout"
        />

</LinearLayout>