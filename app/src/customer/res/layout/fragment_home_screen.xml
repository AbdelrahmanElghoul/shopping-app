<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context="com.example.shoppingapp_customer.fragments.HomeScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/background"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/home_screen_appbar_hsf"
        android:layout_height="?actionBarSize">

        <ImageView
            android:layout_width="wrap_content"
            android:scaleType="fitCenter"
            android:paddingHorizontal="@dimen/average_margin_padding"
            android:layout_height="match_parent"
            android:src="@drawable/more_img"/>

        <TextView
            style="@style/header_Text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/app_name"
            android:gravity="center_vertical"
            android:textAllCaps="true"
            android:contentDescription="@string/app_name" />



        <ImageView
            android:layout_width="wrap_content"
            android:paddingHorizontal="@dimen/low_margin_padding"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:id="@+id/img_logout_hsf"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/logout"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/average_margin_padding"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingVertical="@dimen/low_margin_padding"
            android:paddingHorizontal="@dimen/average_margin_padding"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/txt_see_all_category_hsf"
                app:layout_constraintBottom_toBottomOf="@id/txt_see_all_category_hsf"
                android:text="@string/discover"
                android:textSize="@dimen/small_text_size"
                android:textColor="#000"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/see_all"
                style="@style/small_round_corner_button"
                android:id="@+id/txt_see_all_category_hsf"

                />


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:paddingVertical="@dimen/low_margin_padding"
                app:layout_constraintTop_toBottomOf="@id/txt_see_all_category_hsf"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/rv_category_hsf"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_category_hsf"
                android:layout_width="match_parent"
                style="@style/img_offer"
                android:id="@+id/img_offer1_hsv"
                />


            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/txt_see_all_previous_order_hsf"
                app:layout_constraintBottom_toBottomOf="@id/txt_see_all_previous_order_hsf"
                android:text="@string/your_previous_order"
                android:textSize="@dimen/small_text_size"
                android:textColor="#000"
                />

            <TextView
                style="@style/small_round_corner_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/img_offer1_hsv"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/see_all"
                android:id="@+id/txt_see_all_previous_order_hsf"
                android:layout_marginTop="@dimen/high_margin_padding"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:paddingTop="@dimen/low_margin_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_previous_order_hsf"
                app:layout_constraintTop_toBottomOf="@id/txt_see_all_previous_order_hsf"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <ImageView
                app:layout_constraintStart_toStartOf="@id/img_offer1_hsv"
                app:layout_constraintEnd_toEndOf="@id/img_offer1_hsv"
                app:layout_constraintTop_toBottomOf="@id/rv_previous_order_hsf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/img_offer2_hsf"
                style="@style/img_offer"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</LinearLayout>