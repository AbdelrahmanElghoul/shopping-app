<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/average_margin_padding"
    android:padding="@dimen/average_margin_padding"
    android:id="@+id/alert_dialog_layout"
   >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/header_Text"
        android:text="Add new category"
        android:id="@+id/alert_dialog_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:layout_width="@dimen/Extra_large_icon_width_height"
        android:layout_height="@dimen/Extra_large_icon_width_height"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/round_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alert_dialog_title"
        android:id="@+id/alert_dialog_img"
        android:src="@drawable/default_img"/>

    <EditText
        android:layout_width="match_parent"
        android:hint="@string/category"
        android:id="@+id/alert_dialog_edittext"
        android:focusedByDefault="true"
        android:layout_marginHorizontal="@dimen/average_icon_width_height"
        app:layout_constraintTop_toBottomOf="@id/alert_dialog_img"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alert_dialog_guideline"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:layout_marginTop="@dimen/average_margin_padding"
        android:textAllCaps="false"
        app:layout_constraintEnd_toStartOf="@id/alert_dialog_guideline"
        app:layout_constraintStart_toStartOf="@id/alert_dialog_edittext"
        app:layout_constraintTop_toBottomOf="@id/alert_dialog_edittext"
        android:id="@+id/btn_alert_dialog_add"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@id/alert_dialog_guideline"
        app:layout_constraintEnd_toEndOf="@id/alert_dialog_edittext"
        app:layout_constraintTop_toTopOf="@id/btn_alert_dialog_add"
        android:id="@+id/btn_alert_dialog_cancel"/>


</androidx.constraintlayout.widget.ConstraintLayout>