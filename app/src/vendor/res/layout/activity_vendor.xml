<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.shoppingapp_vendor.VendorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/appbar_av"
        android:gravity="center"
        android:layout_height="?actionBarSize"
        android:layout_marginBottom="@dimen/average_margin_padding"
        android:paddingStart="@dimen/high_margin_padding">

        <TextView
            style="@style/appbar_Text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|start"
            android:text="@string/app_name"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="@dimen/average_icon_width_height"
            android:layout_height="@dimen/average_icon_width_height"
            android:layout_marginEnd="@dimen/low_margin_padding"
           android:scaleType="fitCenter"
            android:id="@+id/img_logout_av"
            android:src="@drawable/logout"/>
    </LinearLayout>
    
    <ImageView
        android:id="@+id/img_item_icon_av"
        app:layout_constraintTop_toBottomOf="@id/appbar_av"
        android:layout_width="@dimen/default_icon_width_height"
        android:layout_height="@dimen/default_icon_width_height"
        android:layout_marginHorizontal="@dimen/average_margin_padding"
        android:background="@drawable/round_frame"
        android:contentDescription="item icon"
        android:src="@drawable/default_img"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="@dimen/_5sdp"
        android:padding="@dimen/low_margin_padding"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="@id/img_item_icon_av"
        app:layout_constraintBottom_toBottomOf="@id/img_item_icon_av"
        android:id="@+id/view_av"/>
        
    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toBottomOf="@id/view_av"
        android:layout_width="match_parent"
        android:layout_weight="1"
        app:cardCornerRadius="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/average_margin_padding"
        android:layout_marginBottom="@dimen/average_margin_padding"
        app:layout_constraintBottom_toTopOf="@id/btn_add_item"
        android:layout_height="0dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guide_line_vertical_av"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.2" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_item_name_txt_av"
                    style="@style/text_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/high_margin_padding"
                    android:layout_marginTop="@dimen/average_margin_padding"
                    android:hint="@string/name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/guide_line_vertical_av">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_item_name_av"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="100" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guide_line_av"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_item_price_txt_av"
                    style="@style/text_input_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/average_margin_padding"
                    android:layout_marginEnd="@dimen/average_margin_padding"
                    android:hint="@string/price"
                    app:layout_constraintEnd_toStartOf="@id/guide_line_av"
                    app:layout_constraintStart_toStartOf="@id/layout_item_name_txt_av"
                    app:layout_constraintTop_toBottomOf="@id/layout_item_name_txt_av">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_item_price_av"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_item_stock_txt_av"
                    style="@style/text_input_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/average_margin_padding"
                    android:hint="@string/stock"
                    app:layout_constraintEnd_toEndOf="@id/layout_item_price_txt_av"
                    app:layout_constraintStart_toStartOf="@id/layout_item_price_txt_av"
                    app:layout_constraintTop_toBottomOf="@id/layout_item_price_txt_av">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_item_stock_av"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/spinner_layout_av"
                    android:layout_width="0dp"
                    android:background="@drawable/border"
                    android:layout_height="0dp"
                    app:layout_constraintCircleRadius="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="@id/layout_item_stock_txt_av"
                    app:layout_constraintEnd_toEndOf="@id/layout_item_name_txt_av"
                    app:layout_constraintStart_toEndOf="@id/guide_line_av"
                    app:layout_constraintTop_toTopOf="@id/layout_item_price_txt_av">

                    <ImageView
                        android:id="@+id/img_selected_category_av"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:contentDescription="category icon"
                        android:scaleType="fitCenter"
                        android:src="@drawable/default_img" />

                    <com.example.shoppingapp_vendor.util.mSpinner
                        android:id="@+id/spinner_category_av"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:autofillHints="@string/category"
                        android:focusable="false"
                        android:spinnerMode="dialog" />
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_item_description_txt_av"
                    style="@style/text_input_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/average_margin_padding"
                    android:hint="@string/description"
                    app:layout_constraintEnd_toEndOf="@id/layout_item_name_txt_av"
                    app:layout_constraintStart_toStartOf="@id/layout_item_name_txt_av"
                    app:layout_constraintTop_toBottomOf="@id/layout_item_stock_txt_av">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_item_description_av"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_item_manufacture_txt_av"
                    style="@style/text_input_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/average_margin_padding"
                    android:hint="@string/manufacture_details"
                    app:layout_constraintEnd_toEndOf="@id/layout_item_description_txt_av"
                    app:layout_constraintStart_toStartOf="@id/layout_item_description_txt_av"
                    app:layout_constraintTop_toBottomOf="@id/layout_item_description_txt_av">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_manufacture_av"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.cardview.widget.CardView>

    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/btn_add_item"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/green_60"
        android:textAlignment="center"
        android:gravity="center"
        android:paddingHorizontal="@dimen/average_margin_padding"
        android:text="@string/add"
        android:textColor="@color/white"
        android:textSize="@dimen/text_appbar_size" />


</androidx.constraintlayout.widget.ConstraintLayout>
