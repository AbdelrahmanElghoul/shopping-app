<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/app_icon_color_light"
    android:gravity="center"
    android:orientation="vertical"
   >


    <ImageView
        android:layout_width="@dimen/default_icon_width_height"
        android:layout_height="@dimen/default_icon_width_height"
        android:layout_marginTop="@dimen/high_margin_padding"
        android:id="@+id/img_avatar_asc"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="@dimen/_5sdp"
        android:background="@drawable/round_frame"
        android:backgroundTint="@color/white"
        android:src="@drawable/app_icon_img_foreground"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:id="@+id/horizontal_view_asc"
        app:layout_constraintTop_toTopOf="@id/img_avatar_asc"
        app:layout_constraintBottom_toBottomOf="@id/img_avatar_asc"
        android:visibility="invisible"
        />

    <androidx.cardview.widget.CardView
        app:layout_constraintStart_toStartOf="@id/horizontal_view_asc"
        app:layout_constraintEnd_toEndOf="@id/horizontal_view_asc"
        android:id="@+id/card_asc"
        app:cardCornerRadius="50dp"
        android:layout_marginHorizontal="@dimen/average_margin_padding"
        app:layout_constraintTop_toBottomOf="@id/horizontal_view_asc"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/average_margin_padding"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/high_margin_padding"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_line_asc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:textAllCaps="false"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/guide_line_asc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/appbar_Text"
                android:textAlignment="center"
                android:textColor="@color/app_icon_color_dark"
                />

            <ProgressBar
                android:layout_width="@dimen/large_icon_width_height"
                android:layout_height="@dimen/large_icon_width_height"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>