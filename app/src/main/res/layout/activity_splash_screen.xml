<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/btn_color"
    android:gravity="center"
    android:orientation="vertical"
   >


    <ImageView
        android:layout_width="@dimen/default_icon_width_height"
        android:layout_height="@dimen/default_icon_width_height"
        android:layout_marginTop="@dimen/high_margin_padding"
        android:id="@+id/img_avatar_asc"
        app:layout_constraintBottom_toTopOf="@id/guideline_asc"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="@dimen/_2sdp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:src="@drawable/app_icon_img_foreground"
        />

<androidx.constraintlayout.widget.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/guideline_asc"
    app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/guideline_asc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="welcome"
        style="@style/header_Text"

        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/_30ssp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>